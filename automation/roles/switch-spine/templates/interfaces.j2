# The loopback network interface
auto lo
iface lo inet loopback
   address {{hostvars[inventory_hostname]["routing"]["lo"]}}


auto eth0
iface eth0 inet dhcp
 vrf mgmt

auto mgmt
iface mgmt
  address 127.0.0.1/8
  vrf-table auto

{% for interface in hostvars[inventory_hostname]["ports"] -%}
auto {{interface}}
iface {{interface}}
   mtu 9216
{% endfor %}
